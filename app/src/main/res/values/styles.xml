<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewActivityWeatherStyle" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_view_weather_activity_text_size</item>
        <item name="android:layout_marginTop">@dimen/text_view_weather_activity_margin_top</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonActivityWeatherStyle" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/button_weather_activity_text_size</item>
        <item name="android:layout_marginTop">@dimen/button_weather_activity_margin_top</item>
        <item name="android:backgroundTint">@color/purple_200</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RecyclerViewWeatherActivityStyle" parent="TextAppearance.AppCompat.Display1">
        <item name="android:layout_marginTop">@dimen/recycler_view_weather_activity_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/recycler_view_weather_activity_margin_bottom</item>
    </style>

    <style name="TextViewItemRecyclerViewStyle" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_view_item_recycler_view_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">@dimen/text_view_item_recycler_view_margin_end</item>
    </style>

    <style name="ImageViewItemRecyclerViewStyle" parent="TextAppearance.AppCompat.Display1">
        <item name="android:layout_marginEnd">@dimen/image_view_item_recycler_view_margin_end</item>
    </style>

    <style name="TextViewFragmentStyle" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_view_fragment_text_size</item>
        <item name="android:layout_marginTop">@dimen/text_view_fragment_margin_end</item>
        <item name="android:paddingStart">@dimen/text_view_fragment_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/text_view_fragment_padding_horizontal</item>
        <item name="android:shadowColor">@color/orange</item>
        <item name="android:shadowDx">@dimen/text_view_fragment_shadow_dx</item>
        <item name="android:shadowDy">@dimen/text_view_fragment_shadow_dy</item>
        <item name="android:shadowRadius">@dimen/text_view_fragment_shadow_radius</item>
    </style>

    <style name="ButtonFragmentStyle" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/button_fragment_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/button_fragment_margin_top</item>
        <item name="android:backgroundTint">@color/light_blue</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginEnd">@dimen/button_fragment_margin_end</item>
    </style>
</resources>
